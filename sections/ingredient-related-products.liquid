  }
}
#collection-{{ section.id }} .collection__title_inline{
    display:flex;
    justify-content:space-between;
    gap:1rem;
    align-items:center;
    border-top: 1px solid rgba(211, 211, 211, 1);
    padding-top: 3rem;
