                      {%- assign on_class = '' -%}
                      {%- if ticks >= 3 -%}{%- assign on_class = ' is-on' -%}{%- endif -%}
                      <div class="cc-cell">
                        <span class="cc-ticks">
                          {%- for i in (1..ticks) -%}
                            <span class="cc-tick{{ on_class }}" aria-hidden="true">
