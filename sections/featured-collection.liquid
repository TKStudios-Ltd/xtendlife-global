{%- style -%}
.section-{{ section.id }}-padding{
  padding-top:{{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom:{{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px
}
@media (min-width:750px){
  .section-{{ section.id }}-padding{
    padding-top:{{ section.settings.padding_top }}px;
    padding-bottom:{{ section.settings.padding_bottom }}px
  }
}
#collection-{{ section.id }} .collection__title_inline{
  display:flex;
  justify-content:space-between;
  gap:1rem;
  align-items:center
}
#collection-{{ section.id }} .fc-swiper{width:100%}
#collection-{{ section.id }} .fc-swiper .swiper-wrapper{display:flex}
#collection-{{ section.id }} .fc-swiper .swiper-slide{height:auto}
#collection-{{ section.id }} .fc-swiper .swiper-slide > .grid__item {
  width: calc(100% - 2rem) !important; 
  max-width: 100%; 
  flex: 0 0 auto;
}
@media (max-width: 989px) {
  #collection-{{ section.id }} .featured-collections-grids {
    margin-left: -2rem;
    margin-right: -2rem;
  }
  #collection-{{ section.id }} .swiper-pagination-progressbar {
    margin: 4rem 2rem 0;
    width: calc(100% - 4rem);
  }
  #collection-{{ section.id }} .swiper-slide.swiper-slide-active {
    opacity: 1;
  }
  #collection-{{ section.id }} .swiper-slide {
    opacity: 0.5;
    transition: opacity ease .4s;
  }
  #collection-{{ section.id }} .fc-swiper .swiper-slide:first-child {
    margin-left: 2rem;
  }
}
/* --- Neutralize Dawn grid inside this section's Swiper --- */
#collection-{{ section.id }} .fc-swiper .grid,
#collection-{{ section.id }} .fc-swiper [class*="grid--"]{
  display: contents !important; /* nuke grid wrapper behavior */
}
#collection-{{ section.id }} .fc-swiper .grid__item{
  width: auto !important;
  max-width: none !important;
  padding: 0 !important;
  flex: 0 0 auto !important;
}
/* Make Swiper the only layout system here */
#collection-{{ section.id }} .fc-swiper{ overflow:hidden; touch-action: pan-y; }
#collection-{{ section.id }} .fc-swiper .swiper-wrapper{ display:flex; }
#collection-{{ section.id }} .fc-swiper .swiper-slide{ flex-shrink:0; height:auto; }
{%- endstyle -%}

{%- liquid
  assign col = section.settings.collection
  assign products_to_display = 0
  if col != blank
    assign products_to_display = col.all_products_count
    if products_to_display > section.settings.products_to_show
      assign products_to_display = section.settings.products_to_show
      assign more_in_collection = true
    endif
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div
    id="collection-{{ section.id }}"
    class="collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %} section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}"
    data-id="{{ section.id }}"
  >
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width">
      <div class="collection__title_inline">
        {% if section.settings.title != blank %}
          <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        <div class="featured-collections-buttons">
          <a
            href="{{ section.settings.collection.url }}"
            class="{% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
            aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title | escape }}"
          >
            Shop {{ section.settings.collection.title | escape }}
          </a>
        </div>
      </div>
    </div>

    <div class="featured-collections-grids{% if section.settings.full_width %} page-width--wide{% else %} page-width{% endif %}">
      {% if col != blank %}
        {% paginate col.products by section.settings.products_to_show %}
          <!-- Swiper replacing the old UL grid -->
          <div class="swiper fc-swiper" id="fc-swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for product in col.products limit: section.settings.products_to_show %}
                <div class="swiper-slide">
                  <div class="grid__item">
                    {% render 'card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      lazy_load: false,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      section_id: section.id,
                      quick_add: section.settings.quick_add %}
                  </div>
                </div>
              {% endfor %}
            </div>
            <div id="fc-pagination-{{ section.id }}" class="swiper-pagination swiper-pagination-progressbar"></div>
          </div>
        {% endpaginate %}
      {% else %}
        <div class="page-width"><p>No collection selected.</p></div>
      {% endif %}
    </div>

    {% if section.settings.show_view_all and more_in_collection %}
      <div class="center collection__view-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <a
          href="{{ section.settings.collection.url }}"
          class="{% if section.settings.view_all_style == 'link' %}link underlined-link{% elsif section.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
          aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title | escape }}"
        >
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {% endif %}

    {% if section.settings.image_shape == 'arch' %}
      {{ 'mask-arch.svg' | inline_asset_content }}
    {% endif %}
  </div>
</div>

<script>
(function(){
  const el = document.querySelector('#fc-swiper-{{ section.id }}');
  if (!el) return;

  function init(){
    if (typeof window.Swiper === 'undefined') { setTimeout(init, 50); return; }
    if (el.dataset.swiperReady === '1') return;

    const sw = new Swiper(el, {
      slidesPerView: 1.3,
      spaceBetween: 0,
      speed: 500,
      watchOverflow: true,
      breakpoints: {
        750: { slidesPerView: 2.3 },
        990: { slidesPerView: {{ section.settings.columns_desktop | default: 4 }} }
      },
      pagination: {
        el: '#fc-pagination-{{ section.id }}',
        type: 'progressbar'
      }
    });

    el.dataset.swiperReady = '1';
    // keep layout tight as images/fonts load
    const update = () => { try { sw.update(); } catch(e) {} };
    window.addEventListener('load', update, { once:true, passive:true });
    el.querySelectorAll('img').forEach(img => {
      if (!img.complete) img.addEventListener('load', update, { once:true, passive:true });
    });
  }

  init();
})();
</script>


