{% assign domain = request.host %}
{% assign current_url = request.path | 
   replace:'/en-ca' %}


{%- comment -%} Capture the content for header containing the tracking data 
{%- capture contentForQuerystring -%}{{ content_for_header }}{%- endcapture -%}
{%- endcomment -%}

{% comment %} Use string splitting to pull the value from content_for_header and apply some string clean up 
{%- assign pageUrl = contentForQuerystring | split:'"pageurl":"' | last | split:'"' | first | split:'.myshopify.com' | last |
   replace:'\/','/' | 
   replace:'%20',' ' | 
   replace:'\u0026','&' | 
   replace:'/en-ca'
-%}

{%- assign url_parameter = "" -%}

  
   {%- if pageUrl contains "?"-%}
   {%- assign pageQuerystring = pageUrl | split:'?' | last -%}  
	{%- assign url_parameter = "?" | append : pageQuerystring -%}


  {%- endif -%}

{% endcomment %}

{% capture hreflang_default %}
   <link rel="alternate" href="https://xtendlife.co{{current_url}}" hreflang="en-nz" />
   <link rel="alternate" href="https://xtendlife.co/en-au{{current_url}}" hreflang="en-au" />
   <link rel="alternate" href="https://xtendlife.co/en-gb{{current_url}}" hreflang="en-gb" />
   <link rel="alternate" href="https://xtendlife.com/en-ca{{current_url}}" hreflang="en-ca" />
   <link rel="alternate" href="https://xtendlife.com{{current_url}}" hreflang="en" />
   <link rel="alternate" href="https://xtendlife.com{{current_url}}" hreflang="x-default" />
{% endcapture %}

{% capture hreflang_blog %}
   <link rel="alternate" href="https://xtendlife.com{{current_url}}" hreflang="en" />
   <link rel="alternate" href="https://xtendlife.com{{current_url}}" hreflang="x-default" />
{% endcapture %}

{% if template.name == 'article' %}
   {% if blog.handle == 'health-articles' or blog.handle == 'health-videos' %}
      {{ hreflang_blog }}
   {% else %}
      {{ hreflang_default }}
   {% endif %}
{% else %}
   {{ hreflang_default }}
{% endif %}

