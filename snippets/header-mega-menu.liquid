{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {{- 'icon-plus.svg' | inline_asset_content -}}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <div class="mega-menu__content_wrapper page-width--wide">
                  <ul
                    class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                    role="list"
                  >
                    {%- for childlink in link.links -%}
                      <li>
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          href="{{ childlink.url }}"
                          class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ childlink.title | escape }}
                        </a>
                        {%- if childlink.links != blank -%}
                          <ul class="list-unstyled" role="list">
                            {%- for grandchildlink in childlink.links -%}
                              <li>
                                <a
                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                  href="{{ grandchildlink.url }}"
                                  class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                  {% if grandchildlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ grandchildlink.title | escape }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                  <div class="mega-menu__tiles">
                    {%- if forloop.index == 1 -%}
                      {% if section.settings.tile_1_image or section.settings.tile_1_title %}
                        <div class="mega-menu__tile">
                          <a href="{{ section.settings.tile_1_link }}">
                            {% if section.settings.tile_1_image %}
                              <div class="overflow--hidden">
                                <img src="{{ section.settings.tile_1_image | image_url }}" alt="{{ section.settings.tile_1_title | escape }}">
                              </div>
                            {% endif %}
                            {% if section.settings.tile_1_title %}
                              <p class="mega-menu__tile_title">{{ section.settings.tile_1_title }}</p>
                            {% endif %}
                            {% if section.settings.tile_1_subtitle %}
                              <p class="mega-menu__tile_subtitle">{{ section.settings.tile_1_subtitle }}</p>
                            {% endif %}
                            {% if section.settings.tile_1_link_title %}
                              <span class="mega-menu__tile_arrow_link">
                                {{ section.settings.tile_1_link_title }}
                                <span class="icon-wrap">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                              </span>
                            {% endif %}
                          </a>
                        </div>
                      {% endif %}
                      {% if section.settings.tile_2_image or section.settings.tile_2_title %}
                        <div class="mega-menu__tile">
                          <a href="{{ section.settings.tile_2_link }}">
                            {% if section.settings.tile_2_image %}
                              <div class="overflow--hidden">
                                <img src="{{ section.settings.tile_2_image | image_url }}" alt="{{ section.settings.tile_2_title | escape }}">
                              </div>
                            {% endif %}
                            {% if section.settings.tile_2_title %}
                              <p class="mega-menu__tile_title">{{ section.settings.tile_2_title }}</p>
                            {% endif %}
                            {% if section.settings.tile_2_subtitle %}
                              <p class="mega-menu__tile_subtitle">{{ section.settings.tile_2_subtitle }}</p>
                            {% endif %}
                            {% if section.settings.tile_2_link_title %}
                              <span class="mega-menu__tile_arrow_link">
                                {{ section.settings.tile_2_link_title }}
                                <span class="icon-wrap">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                              </span>
                            {% endif %}
                          </a>
                        </div>
                      {% endif %}
                    {%- elsif forloop.index == 2 -%}
                      {% if section.settings.tile_3_image or section.settings.tile_3_title %}
                        <div class="mega-menu__tile">
                          <a href="{{ section.settings.tile_3_link }}">
                            {% if section.settings.tile_3_image %}
                              <div class="overflow--hidden">
                                <img src="{{ section.settings.tile_3_image | image_url }}" alt="{{ section.settings.tile_3_title | escape }}">
                              </div>
                            {% endif %}
                            {% if section.settings.tile_3_title %}
                              <p class="mega-menu__tile_title">{{ section.settings.tile_3_title }}</p>
                            {% endif %}
                            {% if section.settings.tile_3_subtitle %}
                              <p class="mega-menu__tile_subtitle">{{ section.settings.tile_3_subtitle }}</p>
                            {% endif %}
                            {% if section.settings.tile_3_link_title %}
                              <span class="mega-menu__tile_arrow_link">
                                {{ section.settings.tile_3_link_title }}
                                <span class="icon-wrap">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                              </span>
                            {% endif %}
                          </a>
                        </div>
                      {% endif %}
                      {% if section.settings.tile_4_image or section.settings.tile_4_title %}
                        <div class="mega-menu__tile">
                          <a href="{{ section.settings.tile_4_link }}">
                            {% if section.settings.tile_4_image %}
                              <div class="overflow--hidden">
                                <img src="{{ section.settings.tile_4_image | image_url }}" alt="{{ section.settings.tile_4_title | escape }}">
                              </div>
                            {% endif %}
                            {% if section.settings.tile_4_title %}
                              <p class="mega-menu__tile_title">{{ section.settings.tile_4_title }}</p>
                            {% endif %}
                            {% if section.settings.tile_4_subtitle %}
                              <p class="mega-menu__tile_subtitle">{{ section.settings.tile_4_subtitle }}</p>
                            {% endif %}
                            {% if section.settings.tile_4_link_title %}
                              <span class="mega-menu__tile_arrow_link">
                                {{ section.settings.tile_4_link_title }}
                                <span class="icon-wrap">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                              </span>
                            {% endif %}
                          </a>
                        </div>
                      {% endif %}
                      {% if section.settings.tile_5_image or section.settings.tile_5_title %}
                        <div class="mega-menu__tile">
                          <a href="{{ section.settings.tile_5_link }}">
                            {% if section.settings.tile_5_image %}
                              <div class="overflow--hidden">
                                <img src="{{ section.settings.tile_5_image | image_url }}" alt="{{ section.settings.tile_5_title | escape }}">
                              </div>
                            {% endif %}
                            {% if section.settings.tile_5_title %}
                              <p class="mega-menu__tile_title">{{ section.settings.tile_5_title }}</p>
                            {% endif %}
                            {% if section.settings.tile_5_subtitle %}
                              <p class="mega-menu__tile_subtitle">{{ section.settings.tile_5_subtitle }}</p>
                            {% endif %}
                            {% if section.settings.tile_5_link_title %}
                              <span class="mega-menu__tile_arrow_link">
                                {{ section.settings.tile_5_link_title }}
                                <span class="icon-wrap">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                              </span>
                            {% endif %}
                          </a>
                        </div>
                      {% endif %}
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
